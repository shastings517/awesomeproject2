            <ul class="nav navbar-nav">
              <li <% if (activeNav === "home") { %><%=class="active"%><% } %>><a href="/signup">Home</a></li>
              <% if(currentUser) { %>
              <li><a><%= currentUser.username %></a></li> <!--WHY DOES THIS HAVE TO BE CAPITALIZED-->
              <% } %>
