<% include ../partials/header %>

<script src='/javascripts/comments.js'></script>
<div class="ui page grid">
  <h1 class="ui dividing header"><%= post.title  %></h1>
</div>

<div id="postShow" class="ui items row">
  <div class="item">

    <div class="ui small image">
      <img src="<%= post.media %>">
    </div>

    <div class="middle aligned content">
      <div class="header"><%= post.date %></div>
      <div class="description">
        <p><%= post.body %></p>
      </div>
      <div class="extra">
        <a class="ui center floated purple button" href="/posts/<%= post.id %>/edit">Edit</a>
        <form action="/posts/<%= post.id %>?_method=delete" method="POST" style="float:right;">
          <input class="ui red button" type="submit" value="delete">
        </form>
      </div>
    </div>
  </div>
</div>
<div class="ui page grid">
  <h4 class="ui dividing header">Comments</h4>
</div>
<div class="ui page grid">
  <a href="/posts/<%= post._id%>/comments" class="ui black basic button">See all comments</a>
  <a href="/posts/<%= post._id%>/comments/new" class="ui black basic button">Add a new comment</a>
  <a href="/posts" class="ui basic button">Back</a>
  <h4 class="ui header"></h4>
  <div id="comments"></div>
</div>


<% include ../partials/footer %>