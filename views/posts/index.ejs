<% include ../partials/header %>
  <div class="container-fluid">
    <div class="row">
      <% if(currentuser !== ""){ %>
      <div class="col-xs-8 col-xs-offset-2">
        <h1 class="text-center"><%= currentuser.username %></h1>
      </div>
      <div class="col-xs-2">
        <div class="btn btn-default">
          <a href="/posts/new">Add a new post</a>
        </div>
      </div>  
      <% }  %>
    </div>
    <h1 class="ui dividing header">Posts</h1>
  </div>
  <div id="allPosts" class="ui page">
    <% posts.forEach(function(post) {  %>
    <div class="ui items">
      <div class="item">
        <div class="ui tiny image">
          <img src="<%= post.media  %>">
        </div>
        <div class="middle aligned content">
          <span class="meta date"><%= post.date %></span>
          <a class="header" href="/posts/<%= post.id %>"><%= post.title %></a>
          <span><em>Created by: <%= currentuser.username %></em> - </span>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
<% include ../partials/footer %>

