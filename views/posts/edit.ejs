<% include ../partials/header %>

  <div class="container">
    <form action="/posts/<%=post.id%>?_method=put" method="POST">
      <h1>EDIT ENTRY</h1>
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Date</span>
        <input type="date" class="form-control" placeholder="date" aria-describedby="basic-addon1" name="post[date]" value="<%= post.date %>">
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">High</span>
        <textarea type="text" class="form-control" placeholder="high-point" aria-describedby="basic-addon1" name="post[high]"><%= post.high %></textarea>
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Low</span>
        <textarea type="text" class="form-control" placeholder="low point" aria-describedby="basic-addon1" name="post[low]"><%= post.low %></textarea>
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Sleep</span>
        <input type="text" class="form-control" placeholder="hours of sleep last night?" aria-describedby="basic-addon1" name="post[sleep]" value="<%= post.sleep %>">
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Meditate</span>
        <input type="text" class="form-control" placeholder="did you meditate today?" aria-describedby="basic-addon1" name="post[meditate]" value="<%= post.meditate %>">
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Diet</span>
        <input type="text" class="form-control" placeholder="diet" aria-describedby="basic-addon1" name="post[diet]" value="<%= post.diet %>">
      </div>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Improvements</span>
        <input type="text" class="form-control" placeholder="improvements" aria-describedby="basic-addon1" name="post[improvements]" value="<%= post.improvements %>">
      </div>
      <input type="submit" value="submit" class="btn btn-lg submitButton">
    </form>
  </div>

<% include ../partials/footer %>